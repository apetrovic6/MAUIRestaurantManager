<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RestaurantManagerClient.ViewModels"
             xmlns:model="clr-namespace:RestaurantManagerClient.Models"
             x:DataType="vm:MainPageViewModel"
             x:Class="RestaurantManagerClient.Views.Desktop.MainPageDesktop">
    <ContentPage.Content>
        <VerticalStackLayout>
        <Entry Text="{Binding NewRestaurant.Name}"/>
        <Button Text="Add" Command="{Binding AddNewRestaurantCommand}"/>
        <CollectionView ItemsSource="{Binding Restaurants}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Restaurant">
                    <Label Text="{Binding Name}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>