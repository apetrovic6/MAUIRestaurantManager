<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RestaurantManagerClient.ViewModels"
             xmlns:model="clr-namespace:RestaurantManagerClient.Models"
             x:DataType="vm:AddNewRestaurantViewModel"
             x:Class="RestaurantManagerClient.Views.Desktop.RestaurantPages.AddRestaurantPageDesktop">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Restaurant Name"/>
            <Entry Text="{Binding  NewRestaurant.Name}"/>
            
            <Button Grid.Row="1" Text="Add Restaurant" Command="{Binding AddNewRestaurantCommand}"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>